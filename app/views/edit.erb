<h1>Edit Recipe: <%= @recipe.name %></h1>
<form action='/recipes/<%= @recipe.id %>' method='post'>
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  Recipe Name: <input type="text" id="recipe" name="name" value=<%= @recipe.name %>>

  Ingredients: <input type="text" id="ingredients" name="ingredients" value=<%= @recipe.ingredients %>>

  Cook Time: <input type="text" id="cook_time" name="cook_time" value=<%= @recipe.cook_time %>>

  <input type="submit" value="submit">
</form>