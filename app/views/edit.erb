<h1>Edit Recipe: <%= @recipe.name %></h1>
<form action='/recipes/<%= @recipe.id %>' method='post'>
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <label for='recipe'>Recipe Name:</label>
  <input type="text" id="recipe" name="name" value=<%= @recipe.name %>>

  <label for='ingredients'>Ingredients:</label>
  <input type="text" id="ingredients" name="ingredients" value=<%= @recipe.ingredients %>>

  <label for='cook_time'>Cook Time:</label>
  <input type="text" id="cook_time" name="cook_time" value=<%= @recipe.cook_time %>>

  <input type="submit" value="submit">
</form>
